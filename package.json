{
  "name": "turbo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "docs",
      "cli"
    ]
  },
  "scripts": {
    "postinstall": "patch-package && yarn workspace cli build",
    "precommit": "lint-staged",
    "format": "prettier --write 'packages/**/*' 'app/**/*' 'docs/**/*' 'README.md'",
    "deduplicate": "yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "yarn-deduplicate -s fewer yarn.lock --list --fail",
    "docs": "./cli/turbo run dev --scope='docs' --no-cache",
    "test": "./cli/turbo run test",
    "build": "yarn workspace cli clean && yarn workspace cli build && ./cli/turbo run build"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lint-staged": "^11.2.6",
    "patch-package": "^6.4.7",
    "yarn-deduplicate": "^3.1.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,mdx,js,jsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "test": {
        "dependsOn": [],
        "outputs": [
          "coverage/**/*"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "build": {
        "outputs": [
          ".next/**/*"
        ],
        "dependsOn": [
          "cli#turbo",
          "^build"
        ]
      },
      "cli#build": {
        "outputs": [
          "turbo"
        ],
        "dependsOn": []
      }
    }
  }
}
